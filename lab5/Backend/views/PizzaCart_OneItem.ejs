<div class="order-one ng-scope">
    <img class="img-aside pizza-icon" alt="Піца" src="<%= pizza.icon %>">
    <p class="bold mb10 ng-scope">
        <span class="order-title"><%= pizza.title %> (<%= pizza.prefix %>)</span>
    </p>
    <div class="order-text">
        <img class="diagonal-image" src="assets/images/size-icon.svg">
        <span class="diagonal"><%= pizza.sizeData.size %></span>
        <img class="gram-image" src="assets/images/weight.svg">
        <span class="gram"><%= pizza.sizeData.weight %></span>
    </div>
    <div class="price-box">
        <span class="price"><%= pizza.sizeData.price %></span>
        <a class="minus btn btn-xs btn-danger btn-circle" id="minus<%=pizza.id%><%=pizza.prefix%>" href="#">
            <i class="glyphicon glyphicon-minus icon-white">
            </i>
        </a>
            <span class="label order-pizza-count" style="color:black;"><%= pizza.count %></span>
        <a class="plus btn btn-xs btn-success btn-circle" id="plus<%=pizza.id%><%=pizza.prefix%>" href="#">
            <i class="glyphicon glyphicon-plus icon-white">

            </i>
        </a>
        <a class="count-clear btn btn-xs btn-default btn-circle" id="remove<%=pizza.id%><%=pizza.prefix%>" href="#">
            <i class="glyphicon glyphicon-remove icon-white">

            </i>
        </a>
    </div>
</div>